{
    "name": "Vatican Docs Justify Text",
    "description": "Justify paragraphs to a better read",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "vatican_flag_16x16.png",
        "32": "vatican_flag_32x32.png",
        "48": "vatican_flag_48x48.png",
        "128": "vatican_flag_128x128.png"
    },
    "content_scripts": [
        {
            "js": [
                "script.js"
            ],
            "matches": [
                "https://www.vatican.va/*"
            ]
        }
    ]
}